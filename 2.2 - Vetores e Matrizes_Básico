#include "iostream"
#include <locale.h>
#include <stdlib.h>  
using namespace std;

int main(){
	setlocale(LC_ALL, "portuguese");
	system("color 2");//mudar as letras de cor

	int vetor[5]{ rand(),100,200,300,400 };
	cout << "Valor do vetor na posição 0: " << vetor[0] << "\n";
	cout << "Valor do vetor na posição 1: " << vetor[1] << "\n";
	cout << "Valor do vetor na posição 2: " << vetor[2] << "\n";
	cout << "Valor do vetor na posição 3: " << vetor[3] << "\n";
	cout << "Valor do vetor na posição 4: " << vetor[4] << "\n";

	cout << "\n";
	cout << "---------------Matriz Quadrada de ordem 3X3---------------";
	cout << "\n";

	int Matriz[3][3]{10,40,50,60,70,80,90,100,110};
	cout << Matriz[0][0] << "\t";
	cout << Matriz[0][1] << "\t";
	cout << Matriz[0][2] << "\t";
	cout << "\n";
	cout << Matriz[1][0] << "\t";
	cout << Matriz[1][1] << "\t";
	cout << Matriz[1][2] << "\t";
	cout << "\n";
	cout << Matriz[2][0] << "\t";
	cout << Matriz[2][1] << "\t";
	cout << Matriz[2][2] << "\t";

	cout << "\n" << "\n";

	int DiagonalPrincipal_Matriz[]{ Matriz[0][0],Matriz[1][1],Matriz[2][2] };
	cout << "Diagonal principal da matriz: ";
	cout << "\n";
	cout << DiagonalPrincipal_Matriz[0];
	cout << "\n";
	cout << DiagonalPrincipal_Matriz[1];
	cout << "\n";
	cout << DiagonalPrincipal_Matriz[2];

	return 0;
}
