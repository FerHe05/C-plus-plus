#include <stdio.h>

soma(int num1,int num2){
	int resultado;
	resultado=num1+num2;
return resultado;
}
subtracao(int num1,int num2){
	int resultado;
	resultado=num1-num2;
return resultado;
}
multiplicacao(int num1,int num2){
	int resultado;
	resultado=num1*num2;
return resultado;
}
divisao(int num1,int num2){
	int resultado;
	resultado=num1/num2;
return resultado;
}
int main(){
	int x;
		int n1,n2,total;
 		scanf("%d %d",&n1,&n2);
	printf("Digite a operacao que deseja ");
	printf("\n(0 = + , 1 = - , 2 = * , 3 = /): \n");
	scanf("%d",&x);
 
 	if(x == 0){
 		total=soma(n1,n2); 
 		printf("%d",total);
	 }if(x == 1){
 		total=subtracao(n1,n2); 
 		printf("%d",total);
	 }if(x == 2){
 		total=multiplicacao(n1,n2); 
 		printf("%d",total);
	 }if(x == 3){
 		total=divisao(n1,n2); 
 		printf("%d",total);
	 }
	 

 return 0;
}
